---
import About from '@/components/sections/About.astro';
import Education from '@/components/sections/Education.astro';
import Experience from '@/components/sections/Experience.astro';
import Hero from '@/components/sections/Hero.astro';
import Projects from '@/components/sections/Projects.astro';
import Skills from '@/components/sections/Skills.astro';
import Layout from '@/layouts/Layout.astro';

import KeyboardManager from '@/components/KeyboardManager.astro';
import Section from '@/components/Section.astro';

import { basics } from '@cv/en_cv.json';
const { name, label } = basics;
---

<Layout title={`Resume of ${name} - ${label}`}>
  <main class='container'>
    <Section><Hero /></Section>
    <Section title='About'><About /></Section>
    <Section title='Experience'><Experience /></Section>
    <Section title='Education'><Education /></Section>
    <Section title='Projects'><Projects /></Section>
    <Section title='Skills'><Skills /></Section>
    <KeyboardManager />
  </main>
</Layout>

<style>
  .container {
    padding: 2rem;
    box-sizing: border-box;
  }

  @media (min-width: 768px) {
    .container {
      padding: 3rem;
    }
  }
</style>
