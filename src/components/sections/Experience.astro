---
import { work } from '@cv/en_cv.json';
---

<ul>
  {
    work.map(({ name, startDate, endDate, position, summary, highlights, isRemote }) => {
      const startDateString = new Date(startDate).toLocaleDateString('en-US', {
        month: 'short',
        year: 'numeric',
      });
      const endDateString = endDate
        ? new Date(endDate).toLocaleDateString('en-US', {
            month: 'short',
            year: 'numeric',
          })
        : 'Current';
      return (
        <li>
          <article>
            <header>
              <div>
                <div class="name">
                <h3>{name}</h3>
                {isRemote && <span class="tag">Remote</span>}  
                </div>
                <h4>{position}</h4>
              </div>
              <time>
                {startDateString} - {endDateString}
              </time>
            </header>
            <footer>
              {' '}
              <p>{summary}</p>
            </footer>
          </article>
        </li>
      );
    })
  }
</ul>

<style>

  

  .name {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: 8px;
  }

  .tag {
    border-radius: 6px;
    background-color: #eee;
    color: black;
    font-size: 0.75rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 600;
    font-size: 1rem
    color: #111;
  }

  article h4 {
    font-weight: 500;
    font-size: 0.9rem;
    color: #333;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
  }

  time {
    font-size: 0.85rem;
    color: #555;
  }

@media (max-width: 500px) {
  
  header {
    flex-direction: column;
    gap: 4px;
  }
}
</style>
