---
import { basics } from '@cv/en_cv.json';

const { name, email, phone, image, label, location, profiles, summary, url } =
  basics;
const { address, postalCode, city, countryCode, region } = location;
---


  <div class='container'>
    <div class='info'>
      <h1>{name}</h1>
      <h2>{label}</h2>
      <span>
        {city}, {region}
      </span>
      <footer>
        {
          email && (
            <a
              href={`mailto:${email}`}
              title={`Send an email to ${name} at the following address: ${email}`}
              target='_blank'
              rel='noopener noreferrer'>
              {email}
              {/* Robar Icono */}
            </a>
          )
        }
      </footer>
    </div>
    <figure>
      <img src={image} alt={name} />
    </figure>
  </div>

