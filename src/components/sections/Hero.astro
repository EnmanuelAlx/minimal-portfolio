---
import { basics } from '@cv/en_cv.json';
const { name, email, phone, image, label, location, profiles, summary, url } =
  basics;
const { address, postalCode, city, countryCode, region } = location;

import GitHub from '@icons/GitHub.astro';
import LinkedIn from '@icons/LinkedIn.astro';
import Mail from '@icons/Mail.astro';
import Phone from '@icons/Phone.astro';
import WorldMap from '@icons/WorldMap.astro';
import X from '@icons/X.astro';

const SOCIAL_ICONS: Record<string, any> = {
  GitHub,
  LinkedIn,
  X,
};

const linkedInfo = profiles.find(({ network }) => network === 'LinkedIn');
const githubInfo = profiles.find(({ network }) => network === 'GitHub');

const printInfo = [email, phone, linkedInfo?.url, githubInfo?.url]
  .filter(Boolean)
  .join(' ‚óè ');
---

<div class='container'>
  <div class='info'>
    <h1>{name}</h1>
    <h2>{label}</h2>
    <span>
      <WorldMap />
      {city}, {region}
    </span>
    <footer class='print'>
      {printInfo}
    </footer>
    <footer class='no-print'>
      {
        email && (
          <a
            href={`mailto:${email}`}
            title={`Send an email to ${name} at the following address: ${email}`}
            target='_blank'
            rel='noopener noreferrer'>
            <Mail />
          </a>
        )
      }
      {
        phone && (
          <a
            href={`tel:${phone}`}
            title={`Call ${name} at the following number: ${phone}`}
            target='_blank'
            rel='noopener noreferrer'>
            <Phone />
          </a>
        )
      }
      {
        profiles.map(({ network, url, username }) => {
          const Icon = SOCIAL_ICONS[network];
          return (
            <a
              href={url}
              title={`Visit ${name}'s ${network} profile at the following address: ${url}`}
              target='_blank'
              rel='noopener noreferrer'>
              <Icon />
            </a>
          );
        })
      }
    </footer>
  </div>
  <figure>
    <img src={image} alt={name} />
  </figure>
</div>

<style>
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    color: #444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  img {
    aspect-ratio: 1/ 1;
    object-fit: cover;
    width: 128px;
    border-radius: 16px;
  }

  span {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.85rem;
    color: #666;
  }

  footer {
    color: #555;
    font-size: 0.7rem;
    display: flex;
    gap: 4px;
    margin-top: 8px;
    max-width: 450px;
    text-wrap: pretty;
  }

  footer a {
    color: #777;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: 1px solid #eee;
    padding: 4px;
    height: 32px;
    width: 32px;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  footer a:hover {
    background-color: #eee;
    border: 1px solid #ddd;
  }
</style>
