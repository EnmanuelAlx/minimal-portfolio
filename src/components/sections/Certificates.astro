---
import { certificates } from '@cv/en_cv.json';
---

<ul>
  {
    certificates.map(({date, name, issuer, url }) => {
      const dateString = new Date(date).toLocaleDateString('en-US', {
        month: 'short',
        year: 'numeric',
      });
      
      return (
        <li>
          <article>
            <header>
              <div>
                <a href={url} title={`View ${name} certificate`}
              target='_blank'
              rel='noopener noreferrer'>
                  <h3>{name}</h3>
                </a>
              </div>
              <time>
                {dateString}
              </time>
            </header>
            <footer>
              {' '}
              <p>{issuer}</p>
            </footer>
          </article>
        </li>
      );
    })
  }
</ul>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 600;
    font-size: 1rem
    color: #111;
  }
  
  a{
    text-decoration: none;
    color: #111;
  }

  a:hover {
    text-decoration: underline;
  }

  article h4 {
    font-weight: 500;
    font-size: 0.9rem;
    color: #333;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
  }

  time {
    font-size: 0.85rem;
    color: #555;
  }

  
@media (max-width: 500px) {
  
  header {
    flex-direction: column;
    gap: 4px;
  }
}
</style>